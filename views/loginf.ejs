<%- include('partials/header-login') %>
<div class="container" style="min-height: 70vh;">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="dashboard-card p-4 shadow-lg">
        <h2 class="text-center mb-4"><i class="fas fa-lock me-2"></i>Secure Login</h2>
        <% if (typeof message !== 'undefined') { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <form action="/login" method="post">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control form-control-lg" name="uname" required>
          </div>
          <div class="mb-4">
            <label class="form-label">Password</label>
            <input type="password" class="form-control form-control-lg" name="pass" required>
          </div>
          <button type="submit" class="btn btn-gold w-100 btn-lg">
            <i class="fas fa-sign-in-alt me-2"></i>Login
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>