<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4">
    <h2 class="text-center mb-4"><i class="fas fa-user-edit me-2"></i>Edit Client Details</h2>
    
    <form action="/postmodclient" method="post">
      <!-- Client ID -->
      <div class="row mb-4">
        <div class="col-md-6">
          <label for="cid" class="form-label">
            <i class="fas fa-id-badge text-gold me-2"></i>Client ID
          </label>
          <input type="text" class="form-control form-control-lg bg-light" 
                 id="cid" name="cid" value="<%= result[0].clientsid %>" readonly>
        </div>
        <div class="col-md-6">
          <label for="cname" class="form-label">
            <i class="fas fa-user text-gold me-2"></i>Client Name
          </label>
          <input type="text" class="form-control form-control-lg" 
                 id="cname" name="cname" value="<%= result[0].cname %>" required>
        </div>
      </div>

      <!-- Client Address -->
      <div class="row mb-4">
        <div class="col-md-12">
          <label for="caddr" class="form-label">
            <i class="fas fa-location-dot text-gold me-2"></i>Client Address
          </label>
          <input type="text" class="form-control form-control-lg" 
                 id="caddr" name="caddr" value="<%= result[0].caddress %>" required>
        </div>
      </div>

      <!-- GST Information -->
      <div class="row g-4 mb-4">
        <div class="col-md-8">
          <label for="cgstin" class="form-label">
            <i class="fas fa-address-card text-gold me-2"></i>GSTIN
          </label>
          <input type="text" class="form-control form-control-lg" 
                 id="cgstin" name="cgstin" value="<%= result[0].cgstin %>" required>
        </div>
        <div class="col-md-4">
          <label for="cgsttype" class="form-label">
            <i class="fas fa-percent text-gold me-2"></i>GST Type
          </label>
          <select name="cgsttype" id="cgsttype" class="form-select form-select-lg" required>
            <option value="igst" <%= result[0].cgst_type === 'igst' ? 'selected' : '' %>>IGST</option>
            <option value="cs" <%= result[0].cgst_type === 'cs' ? 'selected' : '' %>>CGST/SGST</option>
          </select>
        </div>
      </div>

      <!-- Rate Information -->
      <div class="row g-4 mb-4">
        <div class="col-md-6">
          <label for="crate" class="form-label">
            <i class="fas fa-industry text-gold me-2"></i>Manufacturing Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" class="form-control form-control-lg" 
                   id="crate" name="crate" step="0.01" 
                   value="<%= result[0].crate %>" required>
          </div>
        </div>
        <div class="col-md-6">
          <label for="creprate" class="form-label">
            <i class="fas fa-screwdriver-wrench text-gold me-2"></i>Repairing Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" class="form-control form-control-lg" 
                   id="creprate" name="creprate" step="0.01" 
                   value="<%= result[0].creprate %>" required>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-5">
        <button type="submit" class="btn btn-gold btn-lg px-5">
          <i class="fas fa-save me-2"></i>Save Changes
        </button>
        <a href="/modclient" class="btn btn-outline-secondary btn-lg px-5">
          <i class="fas fa-times me-2"></i>Cancel
        </a>
      </div>
    </form>
  </div>

  <!-- Bottom Navigation -->
  <div class="text-center mt-4">
    <a href="/clients" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left me-2"></i>Back to Clients
    </a>
    <a href="/home" class="btn btn-outline-secondary ms-2">
      <i class="fas fa-home me-2"></i>Home
    </a>
  </div>
</div>

<%- include('partials/footer') %>