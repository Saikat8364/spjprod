<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4">
    <h2 class="text-center mb-4"><i class="fas fa-user-tag me-2"></i>Invoices by Client</h2>
    
    <!-- Original Form Preserved -->
    <form action="/invop_bc" method="post">
      <div class="mb-4">
        <label class="form-label fs-5">
          <i class="fas fa-users text-gold me-2"></i>Select Client
        </label>
        <select name="inpcl" class="form-select form-select-lg">
          <% r.forEach(client => { %>
            <option value="<%= client.clientsid %>"><%= client.cname %></option>
          <% }) %>
        </select>
      </div>

      <input type="hidden" name="hd" value="Invoice Options By Client">

      <div class="text-center">
        <button type="submit" class="btn btn-gold btn-lg px-5">
          <i class="fas fa-search me-2"></i>Search Invoices
        </button>
      </div>
    </form>

    <!-- Original Navigation Preserved -->
    <div class="text-center mt-4">
      <a href="/invoice" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Invoice Operations
      </a>
      <a href="/home" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-home me-2"></i>Home
      </a>
    </div>
  </div>
</div>
<%- include('partials/footer') %>