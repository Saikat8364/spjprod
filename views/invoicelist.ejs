<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4">
    <h2 class="text-center mb-4"><i class="fas fa-list-ol me-2"></i>Invoice List</h2>
    
    <!-- Original Table Structure Preserved -->
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-gold">
          <tr>
            <th><i class="fas fa-hashtag me-2"></i>Bill No.</th>
            <th><i class="fas fa-calendar-day me-2"></i>Date</th>
            <th><i class="fas fa-building me-2"></i>Client Name</th>
            <th><i class="fas fa-weight-hanging me-2"></i>Total Weight</th>
            <th><i class="fas fa-indian-rupee-sign me-2"></i>Total Amount</th>
          </tr>
        </thead>
        <tbody>
          <% var i = 0; %>
          <% for(i=0; i<r.length; i++){ %>
            <tr class="clickable-row">
              <td>SPJ-<%= r[i].rid %></td>
              <% var d = r[i].date.toLocaleDateString("en-GB"); %>
              <td><%= d %></td>
              <td><%= r[i].cname %></td>
              <td><%= r[i].totwt %></td>
              <td>â‚¹<%= r[i].net_total %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Original Navigation Preserved -->
    <div class="text-center mt-4">
      <a href="/invoice" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Invoice Operations
      </a>
      <a href="/home" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-home me-2"></i>Home
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>