<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4">
    <h2 class="text-center mb-4"><i class="fas fa-user-plus me-2"></i>Add New Client</h2>
    
    <form action="/addclient" method="post">
      <!-- Client Name -->
      <div class="row mb-4">
        <div class="col-md-12">
          <label for="cname" class="form-label">
            <i class="fas fa-user text-gold me-2"></i>Client Name
          </label>
          <input type="text" class="form-control form-control-lg" id="cname" name="cname" required>
        </div>
      </div>

      <!-- Client Address -->
      <div class="row mb-4">
        <div class="col-md-12">
          <label for="caddr" class="form-label">
            <i class="fas fa-address-book text-gold me-2"></i>Client Address
          </label>
          <input type="text" class="form-control form-control-lg" id="caddr" name="caddr" required>
        </div>
      </div>

      <!-- GSTIN -->
      <div class="row mb-4">
        <div class="col-md-12">
          <label for="cgstin" class="form-label">
            <i class="fas fa-id-card text-gold me-2"></i>Client GSTIN
          </label>
          <input type="text" class="form-control form-control-lg" id="cgstin" name="cgstin" required>
        </div>
      </div>

      <!-- Rate Section -->
      <div class="row g-4 mb-4">
        <!-- Manufacturing Rate -->
        <div class="col-md-6">
          <label for="crate" class="form-label">
            <i class="fas fa-industry text-gold me-2"></i>Manufacturing Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" class="form-control form-control-lg" id="crate" name="crate" step="0.01" required>
          </div>
        </div>

        <!-- Repairing Rate -->
        <div class="col-md-6">
          <label for="creprate" class="form-label">
            <i class="fas fa-tools text-gold me-2"></i>Repairing Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" class="form-control form-control-lg" id="creprate" name="creprate" step="0.01" required>
          </div>
        </div>
      </div>

      <!-- GST Type -->
      <div class="row mb-4">
        <div class="col-md-12">
          <label for="cgsttype" class="form-label">
            <i class="fas fa-percent text-gold me-2"></i>GST Type
          </label>
          <select name="cgsttype" id="cgsttype" class="form-select form-select-lg" required>
            <option value="igst">IGST</option>
            <option value="cs">CGST/SGST</option>
          </select>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-5">
        <button type="submit" class="btn btn-gold btn-lg px-5">
          <i class="fas fa-save me-2"></i>Create Client
        </button>
        <a href="/clients" class="btn btn-outline-secondary btn-lg px-5">
          <i class="fas fa-times me-2"></i>Cancel
        </a>
      </div>
    </form>
  </div>

  <!-- Bottom Navigation -->
  <div class="text-center mt-4">
    <a href="/admin" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left me-2"></i>Back to Admin
    </a>
    <a href="/home" class="btn btn-outline-secondary ms-2">
      <i class="fas fa-home me-2"></i>Home
    </a>
  </div>
</div>

<%- include('partials/footer') %>