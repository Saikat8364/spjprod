<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4 shadow-lg">
    <h2 class="text-center mb-4 text-gold"><i class="fas fa-pen-to-square me-2"></i>Edit Invoice</h2>
    
    <form action="/editinvdetails" method="post">
      <!-- Bill Selection -->
      <div class="row justify-content-center mb-5">
        <div class="col-md-8">
          <label class="form-label fw-bold fs-5">
            <i class="fas fa-file-invoice text-gold me-2"></i>Select Bill Number
          </label>
          <select name="billno" class="form-select form-select-lg">
            <% result.forEach(invoice => { %>
            <option value="<%= invoice.rid %>">
              SPJ-<%= invoice.rid %> | <%= invoice.cname %>
            </option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="text-center">
        <button type="submit" class="btn btn-gold btn-lg px-5">
          <i class="fas fa-magnifying-glass me-2"></i>Select Bill
        </button>
      </div>
    </form>

    <!-- Navigation -->
    <div class="text-center mt-5">
      <a href="/utility" class="btn btn-outline-secondary btn-lg">
        <i class="fas fa-arrow-left me-2"></i>Back to Utility
      </a>
      <a href="/home" class="btn btn-outline-secondary btn-lg ms-3">
        <i class="fas fa-home me-2"></i>Go Home
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>