<%- include('partials/header') %>
    <div class="container-fluid" style="padding: 1rem;">
        <h2 class="text-center">Edit Invoice</h2>
        <form action="/editinvdetails" method="post">
            <label for="billno" class="form-label" style="font-weight: bold;">Select Bill No.</label>
            <select name="billno" id="billno" class="form-control">
                <%var i = 0;%>
                <%for(i=0;i<result.length;i++){%>
                    <option value="<%=result[i].rid%>">SPJ-<%=result[i].rid%>/<%=result[i].cname%></option>
                <%}%>
            </select>
            <br>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        
    </div>
    <div class="container text-center">
        <a href="/" class="btn btn-primary btn-lg">Go Home</a>
        <a href="/utility" class="btn btn-primary btn-lg">Go Back</a>
    </div>



<%- include('partials/footer') %>