<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Suresh Paul &amp; Jewellers</title>
  <link rel="icon" href="/img/logo.png" type="image/png">
  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Open+Sans:wght@400;600&display=swap"
    rel="stylesheet"
  />

  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/index.css" />
</head>
<body>
  <!-- NAVBAR (dark) -->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top navbar-gradient"> <!-- Changed from bg-dark -->
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="/img/logo.png" alt="Logo" class="logo me-2" />
            <span class="brand-title">Suresh Paul & Jewellers</span>
          </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navMenu"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav ms-auto align-items-lg-center">
          <li class="nav-item"><a class="nav-link" href="#founder">Legacy</a></li>
          <li class="nav-item"><a class="nav-link" href="#craft">Craft</a></li>
          <li class="nav-item"><a class="nav-link" href="#bowbazar">Bowbazar</a></li>
          <li class="nav-item"><a class="nav-link" href="#gallery">Gallery</a></li>
          <li class="nav-item">
            <a class="btn btn-gold ms-lg-3" href="/login">Admin Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- HERO WITH PARALLAX & LOGO ONLY -->
  <header class="hero-section d-flex align-items-center">
    <div class="overlay"></div>
    <div class="container text-center text-white">
      <!-- Logo only, centered -->
      <div class="hero-brand mb-4 animate">
        <img 
          src="/img/logo.png" 
          alt="Suresh Paul & Jewellers Logo" 
          class="hero-logo mx-auto" 
        />
      </div>

      <!-- Headline -->
      <h1 class="display-4 mb-3">
        Bowbazar’s Eternal <span>Elegance</span>
      </h1>
      <p class="lead mb-4">Handcrafting wrist jewels since 2010</p>
      <a href="#founder" class="btn btn-outline-light btn-lg">Learn Our Story</a>
    </div>
  </header>

  <!-- FOUNDER’S LEGACY -->
  <section id="founder" class="py-5">
    <div class="container">
      <div class="row align-items-center gx-5">
        <div class="col-md-6 mb-4 mb-md-0">
          <img
            src="/img/founder.jpg"
            alt="Founder"
            class="img-fluid rounded shadow-lg animate"
          />
        </div>
        <div class="col-md-6">
          <h2 class="section-title">Founder’s Legacy</h2>
          <p class="lead animate">
            In 2010, Mr. Suresh Paul opened a small workshop in the heart of Bowbazar,
            Kolkata, focusing on traditional bangles and churis. Over the years, quiet
            dedication and careful attention to detail have earned his jewellery a
            reputation for refined simplicity and lasting quality.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- OUR CRAFT (carousel of wrist‐wear types) -->
  <section id="craft" class="py-5 bg-light">
    <div class="container">
      <h2 class="section-title text-center mb-5">Our Craft</h2>
      <div id="craftCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% const items = [
              { img:'craft-bala.jpg', title:'Manipuri Bala', text:'Delicate etchings inspired by Northeastern motifs.' },
              { img:'craft-naksha.jpg', title:'Naksha Bala', text:'Intricate hand-engraved patterns in classic gold.' },
              { img:'craft-churi.jpg', title:'Classic Churis', text:'Colourful glass-inlaid bangles fused with gold rims.' },
              { img:'craft-bracelet.jpg', title:'Gold Bracelets', text:'Streamlined designs for everyday elegance.' },
              { img:'craft-chain.jpg', title:'Wrist Chains', text:'Lightweight chains that move with you.' }
            ];
            items.forEach((it,i)=> { %>
                <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                    <div class="row justify-content-center">
                      <div class="col-md-6 text-center">
                        <!-- fluid image, no cropping -->
                        <img
                          src="/img/<%= it.img %>"
                          alt="<%= it.title %>"
                          class="img-fluid carousel-img animate"
                        />
                        <h5 class="mt-3"><%= it.title %></h5>
                        <p><%= it.text %></p>
                      </div>
                    </div>
                  </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#craftCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#craftCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </div>
  </section>

  <!-- BOWBAZAR & US (expanded text) -->
  <section id="bowbazar" class="py-5">
    <div class="container">
      <h2 class="section-title text-center mb-5">Bowbazar &amp; Us</h2>
      <div class="row gx-5">
        <div class="col-lg-4 mb-4">
          <img src="/img/bowbazar-street.jpg" alt="Bowbazar Streets" class="img-fluid rounded shadow-sm animate" />
        </div>
        <div class="col-lg-8">
          <p class="animate">
            Bowbazar, known for its narrow lanes and vibrant trade, has been Kolkata’s
            jewellery heartland for generations. Here, artisans pass down techniques
            from father to son, combining time-honoured methods with subtle modern
            influences. Our atelier sits amid this tapestry of history—where every clink
            of gold echoes stories of craftsmanship, community and quiet resilience.
          </p>
          <p class="animate">
            From sourcing local gold to hand-finishing each curve, we honour Bowbazar’s
            heritage in every piece. Our jewellery is more than adornment—it’s a living
            testament to the skill and spirit of this storied quarter.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- GALLERY (20 placeholders + “More”) -->
  <section id="gallery" class="py-5 bg-light">
    <div class="container">
      <h2 class="section-title text-center mb-5">Gallery</h2>
      <div class="row g-3">
        <% function generateUniqueRandoms(n, m) {
          // Ensure m doesn't exceed available numbers
          m = Math.min(m, n);
          
          const uniqueNumbers = new Set();
          
          while(uniqueNumbers.size < m) {
              const randomNum = Math.floor(Math.random() * n) + 1;
              uniqueNumbers.add(randomNum);
          }
          
          return Array.from(uniqueNumbers);
        } %>
        <%const result = generateUniqueRandoms(30, 15);%>
        
        <% for (let i = 0; i < 15; i++) {%>
         <div class="col-6 col-sm-4 col-md-3">
           <div class="gallery-thumb animate">
             <img 
               src="/img/gallery/gallery-<%= result[i] %>.jpg" 
               alt="Piece <%= i %>" 
               class="img-fluid rounded" 
             />
           </div>
         </div>
       <% } %>       
      </div>
      <div class="text-center mt-4">
        <a href="/gallery" class="btn btn-outline-dark btn-lg">More Images</a>
      </div>
    </div>
  </section>

  <!-- CONTACT DETAILS (in place of testimonials) -->
  <section id="contact" class="py-5">
    <div class="container text-center">
      <h2 class="section-title mb-4">Get in Touch</h2>
      <p class="mb-2"><strong>Mobile:</strong> +91 80173 42710</p>
      <p class="mb-0"><strong>Email:</strong> sureshpaulandjewellers@gmail.com</p>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="py-4 bg-dark text-light">
    <div class="container text-center">
      <%var d = new Date();%>
      <%var year = d.getFullYear();%>
      <p class="mb-1">&copy; <%=year%> Suresh Paul &amp; Jewellers</p>
      <small>26/A, Panchanantala Lane, Bowbazar, Kolkata – 700012</small>
    </div>
  </footer>
  <!-- Scroll to Top Button -->
<button id="scrollTopBtn" class="btn btn-gold scroll-top-btn">
    ↑
  </button>

  <!-- SCRIPTS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>
  <script>
    // GSAP Scroll Animations
    gsap.utils.toArray('.animate').forEach(el => {
      gsap.from(el, {
        scrollTrigger: { trigger: el, start: 'top 90%' },
        y: 40, opacity: 0, duration: 0.8, ease: 'power3.out'
      });
    });

    // Parallax hero
    window.addEventListener('scroll', () => {
      const y = window.pageYOffset;
      document.querySelector('.hero-section').style.backgroundPositionY = `${y * 0.5}px`;
    });

    const scrollBtn = document.getElementById("scrollTopBtn");

  window.addEventListener("scroll", () => {
    scrollBtn.style.display = window.scrollY > 300 ? "block" : "none";
  });

  scrollBtn.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
  </script>
</body>
</html>
