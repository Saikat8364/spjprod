<%- include('partials/header') %>
    <div class="container-fluid" style="padding: 1rem;">
        <h2 style="text-align: center;">New Invoice</h2>
        <div class="container-fluid" style="padding: 1rem;">
            <form action="/chooseclientinv" method="post">
                <div>
                    <label for="client">Choose Client:</label>
                        <select name="client" id="client" class="form-control">
                            <% var i = result.length %>
                            <% for (n=0; n<i; n++){ %>
                                <option value="<%= result[n].clientsid %>"><%= result[n].cname %></option>
                            <% } %>
                        </select>
                    <br>
                    <br>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="container text-center">
        <a href="/" class="btn btn-primary btn-lg">Go Home</a>
        <a href="/utility" class="btn btn-primary btn-lg">Go Back</a>
    </div>


<%- include('partials/footer') %>