<%- include('partials/header') %>
<div class="container py-5">
  <h2 class="text-center mb-5"><i class="fas fa-users-gear me-2"></i>Client Management</h2>
  
  <div class="row g-4 justify-content-center">
    <!-- Add Client Card -->
    <div class="col-md-6 col-lg-4">
      <div class="dashboard-card h-100">
        <div class="card-body text-center">
          <div class="panel-icon mb-3">
            <i class="fas fa-user-plus fa-3x text-gold"></i>
          </div>
          <h4 class="card-title mb-3">Add New Client</h4>
          <p class="card-text text-muted">Create new client profiles with GST and rate details</p>
          <a href="/addclient" class="btn btn-gold">
            <i class="fas fa-plus-circle me-2"></i>Create Client
          </a>
        </div>
      </div>
    </div>

    <!-- Modify Client Card -->
    <div class="col-md-6 col-lg-4">
      <div class="dashboard-card h-100">
        <div class="card-body text-center">
          <div class="panel-icon mb-3">
            <i class="fas fa-users-cog fa-3x text-gold"></i>
          </div>
          <h4 class="card-title mb-3">Manage Clients</h4>
          <p class="card-text text-muted">Edit existing client information and rates</p>
          <a href="/modclient" class="btn btn-gold">
            <i class="fas fa-edit me-2"></i>Modify Clients
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mt-5">
    <a href="/admin" class="btn btn-outline-secondary me-2">
      <i class="fas fa-arrow-left me-2"></i>Back to Admin
    </a>
    <a href="/home" class="btn btn-outline-secondary">
      <i class="fas fa-home me-2"></i>Go Home
    </a>
  </div>
</div>

<%- include('partials/footer') %>