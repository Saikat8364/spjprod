<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4">
    <div class="text-center mb-5">
      <div class="panel-icon success-icon mb-3">
        <i class="fas fa-check-circle fa-3x text-success"></i>
      </div>
      <h2 class="mb-3"><%= message %></h2>
      <p class="text-muted">Select an option below to continue</p>
    </div>

    <div class="row g-4 justify-content-center">
      <!-- Add Client Card -->
      <div class="col-md-6 col-lg-4">
        <div class="dashboard-card h-100">
          <div class="card-body text-center">
            <div class="panel-icon mb-3">
              <i class="fas fa-user-plus fa-3x text-gold"></i>
            </div>
            <h4 class="card-title mb-3">Add Another Client</h4>
            <a href="/addclient" class="btn btn-gold">
              <i class="fas fa-plus-circle me-2"></i>Add New
            </a>
          </div>
        </div>
      </div>

      <!-- Modify Client Card -->
      <div class="col-md-6 col-lg-4">
        <div class="dashboard-card h-100">
          <div class="card-body text-center">
            <div class="panel-icon mb-3">
              <i class="fas fa-users-cog fa-3x text-gold"></i>
            </div>
            <h4 class="card-title mb-3">Modify Clients</h4>
            <a href="/modclient" class="btn btn-gold">
              <i class="fas fa-edit me-2"></i>Manage
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="d-grid gap-2 d-md-flex justify-content-center mt-5">
        <a href="/admin" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Admin Panel
          </a>
      <a href="/home" class="btn btn-outline-secondary">
        <i class="fas fa-home me-2"></i>Go Home
      </a>
      
    </div>
  </div>
</div>

<%- include('partials/footer') %>