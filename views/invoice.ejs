<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4">
    <h2 class="text-center mb-4"><i class="fas fa-file-invoice me-2"></i>Invoice Operations</h2>
    
    <!-- Original Form Structure Preserved -->
    <form action="/invop" method="post">
      <div class="mb-4">
        <label class="form-label fs-5">
          <i class="fas fa-filter text-gold me-2"></i>Select Invoice Search Type
        </label>
        <select name="invop" class="form-select form-select-lg">
          <option value="bd">By Date</option>
          <option value="bdr">By Date Range</option>
          <option value="bc">By Client</option>
        </select>
      </div>

      <div class="text-center mt-5">
        <button type="submit" class="btn btn-gold btn-lg px-5">
          <i class="fas fa-arrow-right me-2"></i>Continue
        </button>
      </div>
    </form>

    <!-- Original Navigation Preserved -->
    <div class="text-center mt-4">
      <a href="/admin" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Admin
      </a>
      <a href="/home" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-home me-2"></i>Home
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>