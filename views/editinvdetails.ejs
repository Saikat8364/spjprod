<%- include('partials/header') %>
<div class="container py-5">
  <div class="dashboard-card p-4 shadow-lg">
    <h2 class="text-center mb-4 text-gold"><i class="fas fa-file-pen me-2"></i>Edit Invoice Details</h2>
    
    <form action="/invdetailseditsubmit" method="post">
      <!-- Client Info Section -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <label class="form-label fw-bold">
            <i class="fas fa-id-badge text-gold me-2"></i>Invoice ID
          </label>
          <input type="text" class="form-control bg-light" 
                 name="rid" value="<%= r[0].rid %>" readonly>
        </div>
        <div class="col-md-3">
          <label class="form-label fw-bold">
            <i class="fas fa-user-tag text-gold me-2"></i>Client ID
          </label>
          <input type="text" class="form-control bg-light" 
                 name="cid" value="<%= r[0].cid %>" readonly>
        </div>
        <div class="col-md-4">
          <label class="form-label fw-bold">
            <i class="fas fa-building text-gold me-2"></i>Client Name
          </label>
          <input type="text" class="form-control bg-light" 
                 name="cname" value="<%= r[0].cname %>" readonly>
        </div>
        <div class="col-md-2">
          <label class="form-label fw-bold">
            <i class="fas fa-percent text-gold me-2"></i>GST Type
          </label>
          <input type="text" class="form-control bg-light" 
                 name="cgsttype" value="<%= r[0].cgsttype %>" readonly>
        </div>
      </div>

      <div class="row g-3 mb-4">
        <div class="col-12">
          <label class="form-label fw-bold">
            <i class="fas fa-location-dot text-gold me-2"></i>Client Address
          </label>
          <input type="text" class="form-control bg-light" 
                 name="caddr" value="<%= r[0].caddr %>" readonly>
        </div>
      </div>

      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-address-card text-gold me-2"></i>GSTIN
          </label>
          <input type="text" class="form-control bg-light" 
                 name="cgstin" value="<%= r[0].cgstin %>" readonly>
        </div>
        <div class="col-md-3">
          <label class="form-label fw-bold">
            <i class="fas fa-industry text-gold me-2"></i>Manufacturing Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="text" class="form-control bg-light" 
                   name="crate" value="<%= r[0].crate %>" readonly>
          </div>
        </div>
        <div class="col-md-3">
          <label class="form-label fw-bold">
            <i class="fas fa-tools text-gold me-2"></i>Repairing Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="text" class="form-control bg-light" 
                   name="creprate" value="<%= r[0].creprate %>" readonly>
          </div>
        </div>
      </div>

      <!-- Editable Fields Section -->
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-file-lines text-gold me-2"></i>Invoice Type
          </label>
          <select name="invtype" class="form-select form-select-lg">
            <option value="dc">Delivery Challan</option>
            <option value="aiv">Approval Issue Voucher</option>
          </select>
        </div>
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-coins text-gold me-2"></i>Gold Market Rate
          </label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" class="form-control form-control-lg" 
                   name="mrate" value="<%= r[0].mrate %>">
          </div>
        </div>
      </div>

      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-hashtag text-gold me-2"></i>Issue Voucher No
          </label>
          <input type="text" class="form-control form-control-lg" 
                 name="ivno" value="<%= r[0].ivno %>">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-calendar-days text-gold me-2"></i>Issue Date
          </label>
          <input type="text" class="form-control form-control-lg" 
                 name="ivdate" value="<%= r[0].ivdate %>">
        </div>
      </div>

      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-weight-scale text-gold me-2"></i>Gold Ornaments Weight
          </label>
          <div class="input-group">
            <span class="input-group-text">gms</span>
            <input type="text" class="form-control form-control-lg" 
                   name="gorn" value="<%= r[0].gorn %>">
          </div>
        </div>
        <div class="col-md-6">
          <label class="form-label fw-bold">
            <i class="fas fa-screwdriver-wrench text-gold me-2"></i>Repairing Weight
          </label>
          <div class="input-group">
            <span class="input-group-text">gms</span>
            <input type="text" class="form-control form-control-lg" 
                   name="rep" value="<%= r[0].rep %>">
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="text-center mt-5">
        <button type="submit" class="btn btn-gold btn-lg px-5">
          <i class="fas fa-save me-2"></i>Save Changes
        </button>
      </div>
    </form>

    <!-- Navigation -->
    <div class="text-center mt-5">
      <a href="/editinv" class="btn btn-outline-secondary btn-lg">
        <i class="fas fa-arrow-left me-2"></i>Back to Invoice Selection
      </a>
      <a href="/home" class="btn btn-outline-secondary btn-lg ms-3">
        <i class="fas fa-home me-2"></i>Go Home
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>